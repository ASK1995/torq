"""
This script runs all of Torq's unit and integration tests
specified in the BUILD file.

All tests can be run with:
    ./torq_test --all

Integration tests can be run with:
    ./torq_test --integration

Unit tests can be run with:
    ./torq_test --unit
    ./torq_test

You can filter to only run specific unit tests with:
    ./torq_test --unit torq_unit_test device_unit_test
"""

import os
import subprocess
import sys
import argparse

def parse_args():
    """Parses command line arguments into specific flags."""
    parser = argparse.ArgumentParser(description="Run torq tests.")
    group = parser.add_mutually_exclusive_group()

    group.add_argument(
        "--unit", action="store_true", help="Run unit tests."
    )
    group.add_argument(
        "--integration", action="store_true", help="Run integration tests."
    )
    group.add_argument(
        "--all", action="store_true", help="Run all tests (unit + integration)."
    )
    parser.add_argument(
        "remaining",
        nargs="*",
        help="Specific individual unit-test names to run."
    )
    return parser.parse_args()

def run_tests(args):
    """Executes tests based on the flags provided."""
    
    # Default to unit tests if no specific mode is selected
    if not (args.unit or args.integration or args.all):
        args.unit = True

    cmd = ["bazel", "test"]
    targets = []
    tag_filters = []

    env_path = f"--action_env=PATH={os.environ.get('PATH', '')}"

    if args.all:
        mode_str = "All"
        targets = ["//...", "//:test_android_integration"]
        cmd.extend([
            "--test_output=errors",
            env_path,
        ])
    elif args.integration:
        mode_str = "Integration"
        targets = ["//:test_android_integration"]
        cmd.extend([
            "--test_output=all",
            "--nocache_test_results",
            env_path,
        ])
    else:
        mode_str = "Unit"
        tag_filters.append("-integration")
        targets = args.remaining if args.remaining else ["//..."]
        cmd.append("--test_output=errors")

    if tag_filters:
        cmd.append(f"--test_tag_filters={','.join(tag_filters)}")

    cmd.extend(targets)

    print(f"\n--- Running {mode_str} Tests: {', '.join(targets)} ---")

    result = subprocess.run(cmd)
    return result.returncode

if __name__ == "__main__":
    test_args = parse_args()
    status = run_tests(test_args)
    sys.exit(status)